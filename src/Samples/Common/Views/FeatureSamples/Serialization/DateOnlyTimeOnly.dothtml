@viewModel DotVVM.Samples.Common.ViewModels.FeatureSamples.Serialization.DateOnlyTimeOnlyViewModel, DotVVM.Samples.Common

<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>

    <h1>DateOnly and TimeOnly playground</h1>

    <p>
        <h2>Rendered plainly</h2>
        <span data-ui="dateonly-plain"><b>DateOnly:</b> {{value: DateOnly}} </span><br />
        <span data-ui="timeonly-plain"><b>TimeOnly:</b> {{value: TimeOnly}} </span><br />
    </p>

    <p>
        <h2>Rendered using spans</h2>
        <b>DateOnly:</b> <span data-ui="dateonly-span">{{value: DateOnly}}</span> <br />
        <b>TimeOnly:</b> <span data-ui="timeonly-span">{{value: TimeOnly}}</span> <br />
    </p>

    <p>
        <h2>Rendered using default textboxes</h2>
        <b>DateOnly:</b> <dot:TextBox data-ui="dateonly-textbox" Text="{value: DateOnly}" /> <br />
        <b>TimeOnly:</b> <dot:TextBox data-ui="timeonly-textbox" Text="{value: TimeOnly}" />
    </p>

    <p>
        <h2>Rendered using textboxes with input types</h2>
        <b>DateOnly:</b> <dot:TextBox data-ui="dateonly-selector" Text="{value: DateOnly}" Type="Date" /> <br />
        <b>TimeOnly:</b> <dot:TextBox data-ui="timeonly-selector" Text="{value: TimeOnly}" Type="Time" />
    </p>

</body>
</html>


