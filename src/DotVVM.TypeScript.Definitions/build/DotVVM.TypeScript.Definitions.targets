<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <DotVVMTypescriptDefinitionsDestinationPath>wwwroot/Scripts/typings/dotvvm</DotVVMTypescriptDefinitionsDestinationPath>
    </PropertyGroup>
    <ItemGroup>
        <DotVVMTypescriptDefinitionsSourceFiles Include="$(MSBuildThisFileDirectory)/../content/Scripts/typings/dotvvm/*.d.ts" />
    </ItemGroup>
    <Target Name="DotVVMTypescriptDefinitionsCopyScriptsToProject" 
            BeforeTargets="Build"
            Condition="'$(_PlatformWithoutConfigurationInference)'!=''">
        <Copy SourceFiles="@(DotVVMTypescriptDefinitionsSourceFiles)" 
              DestinationFolder="$(ProjectDir)/$(DotVVMTypescriptDefinitionsDestinationPath)" />
    </Target>
</Project>